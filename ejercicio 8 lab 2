//8)Escribir una función recursiva que devuelva la cantidad de dígitos de un número entero

#include <iostream>
using namespace std;


int recursiva() ;
int main() 
{
    int n;
    
    cout<<" Ingrese el valor de un numero:" << endl;
    cin >> n;
    
    Recursiva();
    
}

int recursiva(int n)
{
    int suma, 
    if(n%10 == 0) {
        suma = n%10+suma/10;
        cout<<" El numero de digitos de ese numero son: " <<  suma  << endl};
        return suma;  
    
}
