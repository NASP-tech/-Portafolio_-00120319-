#include <iostream>
using namespace std;

int euclides() ;
int main ()
{
    int mayor = 0, menor = 0;
    cout << "Ingrese un valor mayor y una valor menor: " << endl;
    cin >>mayor>>menor;
    
    euclides() ;


}


int euclides()
{
    int mayor , menor ;
    if (mayor/menor == 0){
        cout <<" El MCD es: "<<menor<<endl;
    }
        
    else {
        menor=mayor;
        cout<<" El MCD es: "<<menor<<endl;
    }
        return menor;
}
    
