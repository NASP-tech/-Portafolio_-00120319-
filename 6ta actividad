//6ta Actividad de recursion
//Ejercicio
//Implementar el algoritmo de busqueda binaria en C++.
//Utilice el arreglo{ 1, 3, 4, 5, 17, 18, 31, 33 }.
//Solicite al usuario un numero entero positivo.
//Busque dicho numero en el arreglo mediante una funcion recursiva
//que emplea la busqueda binaria.

# include <iostream>
using namespace std;

int main()
{
	int array[8] = { 1, 3, 4, 5, 17, 18, 31, 33 };
	int low = 0;
	int mid = 0;
	int high = 0;
	int n = 0;


	cout << "Ingrese un numero entero positivo: " << endl;
	cin >> n;
	
	mid = array[8] / 2;
	
	if (n == mid) {
		return mid;

		cout << "El numero esta en: " << mid << endl;
	}
	else if (n > mid) {
		return high;
		cout << "El numero esta en: " << high << endl;
	}
	else {
		return low;
		cout << "El numero esta en: " << low << endl;
	}

	return 0;


}
